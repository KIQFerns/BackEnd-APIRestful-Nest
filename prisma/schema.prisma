// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  name      String
  password  String
  email     String    @unique
  createdAt DateTime
  role      String
  Product   Product[]
}

model Product {
  id          String   @id
  name        String
  description String?
  value       Decimal
  quantity    Int
  createdAt   DateTime
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
}
